upstream php-fpm {
  server unix:/var/run/php-fpm-www.sock;
}

server {
  listen 80;
  server_name <%= node['yourls']['domain'] %>;
  access_log /var/log/nginx/<%= node['yourls']['domain'] %>.access.log;
  error_log /var/log/nginx/<%= node['yourls']['domain'] %>.error.log;

  root <%= node['yourls']['path'] %>;
  error_page 404 /404.php;

  location = /favicon.ico {
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  location ^~ /(css|images|js)/* {
    allow all;
    try_files $uri $uri/;
  }

  location ^~ /(includes|pages|user)/* {
    deny all;
    log_not_found off;
    access_log off;
  }

  # Everything in location goes to args, unless one of the
  # regex rules below takes precedence
  location / {
    index index.php index.html;
    try_files $uri /yourls-loader.php?$args;
  }

  # Prevent hidden files (beginning with a period) from being served
  # Continue logging for fail2ban support
  location ~ /\. {
    deny all;
  }

  # This is a more specific path for admin to allow for additional
  # http auth or special logging
  location ~ /admin/*\.php$ {
    try_files $uri =404;
    fastcgi_read_timeout <%= node['yourls']['fastcgi_read_timeout'] || '3600s' %>;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    fastcgi_pass php-fpm;
    fastcgi_index index.php;
  }

  location ~ \.php$ {
    try_files $uri =404;
    fastcgi_read_timeout <%= node['yourls']['fastcgi_read_timeout'] || '3600s' %>;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    fastcgi_pass php-fpm;
    fastcgi_index index.php;
  }

  location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
    expires max;
    log_not_found off;
  }
}
